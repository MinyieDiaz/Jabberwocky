<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <services>
      <configurator type="Jabberwocky.Glass.DependencyInjection.Configurator, Jabberwocky.Glass" />
    </services>

    <!-- Site Cache Clear -->
    <events>
      <event name="publish:end">
        <!-- Cache clearing handler -->
        <handler type="Jabberwocky.Core.Caching.SiteCache, Jabberwocky.Core" method="EmptyCacheHandler"/>
      </event>
      <event name="publish:end:remote">
        <!-- Cache clearing handler -->
        <handler type="Jabberwocky.Core.Caching.SiteCache, Jabberwocky.Core" method="EmptyCacheHandler"/>
      </event>

      <event name="indexing:end">
        <!-- Cache clearing handler -->
        <handler type="Jabberwocky.Core.Caching.SiteCache, Jabberwocky.Core" method="EmptyCacheHandler"/>
      </event>
      <event name="indexing:end:remote">
        <!-- Cache clearing handler -->
        <handler type="Jabberwocky.Core.Caching.SiteCache, Jabberwocky.Core" method="EmptyCacheHandler"/>
      </event>
    </events>
    <!-- Uncomment to add Attritube Configuration Loaders via configuration.
    <pipelines>
      <glassMapper.getGlassLoaders>
        <processor type="Jabberwocky.Glass.Pipelines.GetGlassLoaders.GetAttributeConfigurationLoaders, Jabberwocky.Glass">
          <assemblies hint="list:AddAssemblies">
            <Glass>*.Glass</Glass>
          </assemblies>
        </processor>
      </glassMapper.getGlassLoaders>
    </pipelines>
    -->
  </sitecore>
</configuration>